
<div class="div-table">
  <div class="item-list">
    <table id="item-table" class="table table-hover">
      <thead>
        <tr class="table-th">
          <th class="hide">order List</th>
          <th>id</th>
          <th>username</th>
          <th>cost</th>
          <th>state</th>
          <th>ordertime</th>
          <th>details</th>
        </tr>
      </thead>
      <tbody id="product-table-list">
        <% Order.all.each do |item| %>
        <tr data-id = "<%=item.id%>">
          <td class = "item-id "><%=item.id%></td>
          <td><%=item.username%></td>
          <td><%= format("%0.2f",item.totalcost)%></td>
          <td><%=item.state%></td>
          <td><%= item.created_at.localtime.strftime("%Y/%m/%d %H:%M")%></td>
          <td>
            <a href = "/details/<%=item.id%>"><span aria-hidden="true" class="icon-pen"> details</span></a>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript" src="../scripts/order.js"></script>
