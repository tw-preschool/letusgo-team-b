
<div class="div-table">
  <div class="div-table-heard">
    <h3>订单列表</h3>
  </div>
  <div class="item-list">
    <table id="item-table" class="table table-hover">
      <thead>
        <tr class="table-th">
          <th class="hide">order List</th>
          <th>订单编号</th>
          <th>用户名</th>
          <th>订单金额</th>
          <th>订单状态</th>
          <th>订单时间</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="product-table-list">
        <% Order.all.each do |item| %>
        <tr data-id = "<%=item.id%>">
          <td class = "item-id "><%=item.id%></td>
          <td><%=item.username%></td>
          <td><%= format("%0.2f",item.totalcost)%></td>
          <td><%=item.state%></td>
          <td><%= item.created_at.localtime.strftime("%Y/%m/%d %H:%M")%></td>
          <td>
            <a href = "/details/<%=item.id%>">
            <button type="button" class="btn btn-warning btn-xs"> 订单详情</button>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript" src="../scripts/cart.js"></script>
