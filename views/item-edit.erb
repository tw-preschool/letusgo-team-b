<link rel="stylesheet" href="../styles/item-edit.css"/>
<div class = "edit-info">
    <label for = "item-no" class = "iNo hide" id = "iNo">商品编号:<%= @id%></label>
    <label for = "itemName">商品名称：</label>
    <% @item = Product.find(@id) %>
    <input type = "text" class = "iName form-control" id = "iName" value = <%= @item.name %> autofocus required>
    <label for = "itemPrice">价格：</label>
    <input type = "number" class = "iPrice form-control" id = "iPrice" value = "<%= @item.price%>" required>
    <label for = "itemUnit">单位：</label>
    <input type = "text" class = "iUnit form-control" id = "iUnit" value = <%= @item.unit%> required>
    <label class = "hide" id = "iPromotion"><%= @item.unit%></label>
    <label for = "">数量：</label>
    <input type = "number" class = "form-control" id = "iNumber" value = <%= @item.number%> required>
    <label for="iDescribe">描述信息：</label>
    <textarea class="form-control" rows="3" id = "iDescription"><%= @item.description%></textarea>
    <button class = "btn btn-warning save-btn">提交</button>
    <a href = "/admin" class = "back">返回</a>
</div>

<script type="text/javascript" src="../scripts/item-edit.js"></script>
