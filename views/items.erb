<div class="div-table">
  <div class="div-table-heard">
    <h3>商品列表</h3>
  </div>
  <div>
    <table id="item-table" class="table table-hover">
      <thead>
      <tr class="active">
        <th>名称</th>
        <th>单价(元)</th>
        <th>单位</th>
        <th>库存</th>
        <th>促销</th>
        <th></th>
      </tr>
      </thead>
      <tbody id="body-list">
        <% Product.all.each do |item| %>
        <tr>
          <td class = "item-col-name">
            <dl>
              <dt><%=item.name%></dt>
              <dd><%=item.description%></dd>
            </dl>
          </td>
          <td><%=item.price%></td>
          <td><%=item.unit%></td>
          <td><%=item.number%></td>
          <%if item.promotion == "true" %>
          <td class="font-color-red">买二送一</td>
          <%else%>
          <td class="font-color-red"></td>
          <%end%>
          <td class="text-center">
            <button type="button" class="btn btn-primary">加入购物车</button>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  <script type="text/javascript" src="../scripts/model/item.js"></script>
