<div class="div-table">
  <div class="div-table-heard">
    <h3>商品列表</h3>
  </div>
  <table id="item-table" class="table table-hover">
    <thead>
    <tr class="active">
      <th>名称</th>
      <th>单价(元)</th>
      <th>单位</th>
      <th></th>
    </tr>
    </thead>
    <tbody id="body-list">
      <% @products.each do |item| %>
      <tr>
        <td class = "item-name"><%=item.name%></td>
        <td><%=item.price%></td>
        <td><%=item.unit%></td>
        <td class="text-center">
          <button type="button" class="btn btn-primary">加入购物车</button>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>
